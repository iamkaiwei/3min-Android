<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:background">@color/red_background</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_launcher</item>
    </style>

    <!-- TitleTextStyle -->
    <style name="MyTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <!-- activity_imageview.xml -->
    <style name="activity_imageview_img_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/ic_add_photo</item>
    </style>

    <style name="activity_imageview_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/activity_imageview_textview_textsize</item>
    </style>

    <style name="activity_imageview_edittext_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
        <item name="android:textSize">@dimen/activity_imageview_edittext_textsize</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- activity_login.xml -->
    <style name="activity_login_btn_login_facebook">
        <item name="android:background">@drawable/bt_login_facebook</item>
        <item name="android:textSize">0dp</item>
    </style>

</resources>