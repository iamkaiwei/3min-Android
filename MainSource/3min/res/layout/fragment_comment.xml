<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_comment_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@android:color/white" >

        <ListView
            android:id="@+id/fm_comment_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:divider="@color/background_grey"
            android:dividerHeight="1dp" >
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/fm_comment_rl_comment_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_grey"
        android:padding="@dimen/common_spacing_double" >

        <com.lanna.droidlib.view.CustomEditText
            android:id="@+id/fm_comment_et_comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_spacing_double"
            android:layout_toLeftOf="@+id/fm_comment_btn_send"
            android:background="@drawable/background_chat_input"
            android:hint="@string/fm_comment_input_hint"
            android:paddingBottom="@dimen/common_spacing"
            android:paddingLeft="@dimen/activity_chat_tv_radius"
            android:paddingRight="@dimen/activity_chat_tv_radius"
            android:paddingTop="@dimen/common_spacing"
            android:textColor="@color/common_black"
            android:textColorHint="@color/activity_chat_text_color_grey"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <Button
            android:id="@+id/fm_comment_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_chat_btn_send_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_send" />
    </RelativeLayout>

</RelativeLayout>