<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inflater_body_product_grid_bg_with_shadow"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/animation_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white" >

            <ImageView
                android:id="@+id/inflater_product_iv_product_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/stuff_img" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/inflater_product_iv_product_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/inflater_product_iv_product_image"
                android:background="@drawable/bg_overlay" >
            </FrameLayout>
        </RelativeLayout>
        <!-- name of product -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_spacing_double" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_product_tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textColor="@color/common_black"
                android:textSize="@dimen/textsize_medium"
                threemins:customTypeface="@string/font_semibold" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_product_tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 000 VND"
                android:textColor="@color/common_orange"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- group like -->

                <LinearLayout
                    android:id="@+id/inflater_product_ll_group_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/inflater_product_iv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/selector_like" />

                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/inflater_product_tv_product_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/inflater_product_common_spacing"
                        android:text="1000"
                        android:textColor="@color/common_grey"
                        android:textSize="@dimen/textsize_small"
                        threemins:customTypeface="@string/font_regular" />
                </LinearLayout>

                <!-- group comment -->

                <LinearLayout
                    android:id="@+id/inflater_product_ll_group_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_spacing"
                    android:layout_toRightOf="@id/inflater_product_ll_group_like"
                    android:orientation="horizontal" >

	                <ImageView
	                    android:id="@+id/inflater_product_iv_comment_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:src="@drawable/ic_comment" />
	
	                <com.lanna.droidlib.view.CustomTextView
	                    android:id="@+id/inflater_product_tv_product_comment"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:layout_marginLeft="@dimen/inflater_product_common_spacing"
	                    android:text="1200"
	                    android:textColor="@color/common_grey"
	                    android:textSize="@dimen/textsize_small"
	                    threemins:customTypeface="@string/font_regular" />
                </LinearLayout>

                <!-- img share -->

                <ImageView
                    android:id="@+id/inflater_product_iv_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/selector_share_on_facebook" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/inflater_product_v_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inflater_product_ll_owner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_owner_view"
            android:orientation="horizontal"
            android:padding="@dimen/inflater_header_grid_padding"
            android:layout_marginBottom="@dimen/common_spacing" >

            <FrameLayout
                android:layout_width="@dimen/inflater_header_grid_avatar_size"
                android:layout_height="@dimen/inflater_header_grid_avatar_size" >

                <!-- overlay view -->

                <ImageView
                    android:id="@+id/inflater_product_iv_owner_avatar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_border_avatar" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_product_margin_left"
                android:orientation="vertical" >

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_product_tv_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/inflater_product_tv_owner_name_margin_bottom"
                    android:text="Name"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_semibold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inflater_product_tv_owner_name" >

                    <!--
                     <ImageView
                    android:id="@+id/inflater_header_product_grid_image_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock" />
                    -->

                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/inflater_product_tv_owner_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/clock"
                        android:drawablePadding="2dp"
                        android:text="2 days ago"
                        android:textColor="@color/common_grey"
                        android:textSize="@dimen/textsize_small"
                        threemins:customTypeface="@string/font_regular" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>