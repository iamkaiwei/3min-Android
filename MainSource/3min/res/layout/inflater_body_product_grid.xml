<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inflater_body_product_grid_bg_with_shadow"
    android:orientation="vertical" >

    <com.threemin.view.RoundedImageView
        android:id="@+id/inflater_body_product_grid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/background_white_corners_top"
        android:scaleType="fitXY" />

    <!-- name of product -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/inflater_body_product_grid_padding" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_grid_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_semibold" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_grid_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 000 VND"
            android:textColor="@color/common_orange"
            android:textSize="@dimen/textsize_small"
            threemins:customTypeface="@string/font_regular" />
]

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- group like -->

            <LinearLayout
                android:id="@+id/inflater_body_product_grid_group_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/inflater_body_product_grid_img_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/selector_like" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_grid_tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                    android:text="1000"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_regular" />
            </LinearLayout>

            <!-- group comment -->

            <LinearLayout
                android:id="@+id/inflater_body_product_grid_group_img_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/inflater_body_product_grid_group_like"
                android:layout_marginLeft="@dimen/common_spacing"
                android:orientation="horizontal"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/inflater_body_product_grid_img_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_grid_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                    android:text="1200"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_regular" />
            </LinearLayout>

            <!-- img share -->

            <ImageView
                android:id="@+id/inflater_body_product_grid_img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share" />
        </RelativeLayout>
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/background_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/inflater_header_grid_padding" >

        <com.meg7.widget.SvgImageView
            android:id="@+id/inflater_header_product_grid_image"
            android:layout_width="@dimen/inflater_header_grid_avatar_size"
            android:layout_height="@dimen/inflater_header_grid_avatar_size"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            threemins:svg_raw_resource="@raw/shape_avatar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/inflater_header_grid_margin_left"
            android:orientation="vertical" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_header_product_grid_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/inflater_header_grid_tv_name_margin_bottom"
                android:text="Name"
                android:textColor="@color/common_black"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_semibold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inflater_header_product_grid_tv_name" >

                <ImageView
                    android:id="@+id/inflater_header_product_grid_image_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_header_product_grid_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                    android:layout_toRightOf="@+id/inflater_header_product_grid_image_clock"
                    android:text="2 days ago"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_regular" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>