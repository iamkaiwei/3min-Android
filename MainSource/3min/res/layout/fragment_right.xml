<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/inflater_avatar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_grey" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ln_group_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <!-- follow -->
        <ImageView 
            android:id="@+id/img_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_follow"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- liked -->

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/btn_liked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_like"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:singleLine="true"
            android:text="@string/profile_liked"
            android:textColor="@color/common_grey"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_semibold" />

        <FrameLayout
            android:layout_width="1.5dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/common_spacing"
            android:layout_marginTop="@dimen/common_spacing"
            android:background="@color/common_grey" >
        </FrameLayout>

        <!-- messages -->

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/btn_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_message"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:singleLine="true"
            android:text="@string/profile_message"
            android:textColor="@color/common_grey"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_semibold" />

        <FrameLayout
            android:id="@+id/btn_msg_divider"
            android:layout_width="1.5dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/common_spacing"
            android:layout_marginTop="@dimen/common_spacing"
            android:background="@color/common_grey" >
        </FrameLayout>

        <!-- follower -->

        <RelativeLayout
            android:id="@+id/btn_follower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            
            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/btn_follower_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:text="1"
                android:textColor="@color/common_black"
                android:textSize="@dimen/textsize_large"
                threemins:customTypeface="@string/font_bold" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/btn_follower_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_follower_number"
                android:text="@string/followers"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_medium"
                threemins:customTypeface="@string/font_semibold" />
        </RelativeLayout>
        
        <FrameLayout
            android:layout_width="1.5dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/common_spacing"
            android:layout_marginTop="@dimen/common_spacing"
            android:background="@color/common_grey" >
        </FrameLayout>
        
        <!-- following -->

        <RelativeLayout
            android:id="@+id/btn_following"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            
            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/btn_following_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:text="..."
                android:textColor="@color/common_black"
                android:textSize="@dimen/textsize_large"
                threemins:customTypeface="@string/font_bold" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/btn_following_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_following_number"
                android:text="@string/following"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_medium"
                threemins:customTypeface="@string/font_semibold" />
        </RelativeLayout>
        
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_grey" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/fragment_product_bg"
        android:orientation="vertical" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/tv_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_spacing"
            android:singleLine="true"
            android:text="@string/profile_mylist"
            android:textColor="@color/text_color_grouplayout"
            android:textSize="@dimen/textsize_large"
            threemins:customTypeface="@string/font_regular" />

        <FrameLayout
            android:id="@+id/content_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>