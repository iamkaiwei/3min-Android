        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/fragment_product_bg"
        android:orientation="vertical" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/tv_listing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_spacing"
            android:singleLine="true"
            android:text="@string/profile_mylist"
            android:textColor="@color/text_color_grouplayout"
            android:textSize="@dimen/textsize_large"
            threemins:customTypeface="@string/font_regular" />

        <FrameLayout
            android:id="@+id/content_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>