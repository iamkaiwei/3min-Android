<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/inflater_body_product_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/black"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/inflater_body_product_grid_padding"
        android:background="@drawable/background_white_corners_bottom" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_large"
            threemins:customTypeface="@string/font_semibold" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 000 VND"
            android:textColor="@color/common_orange"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_body_product_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="6"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_regular" />

            <ImageView
                android:id="@+id/inflater_body_product_img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:src="@drawable/selector_like" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_line_view_margin_left"
                android:background="@color/common_grey" />

            <!-- avatar who liked your product -->

            <ImageView
                android:id="@+id/inflater_body_product_grid_img_avatar_1"
                android:layout_width="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_height="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:src="@drawable/selector_like" />

            <ImageView
                android:id="@+id/inflater_body_product_grid_img_avatar_2"
                android:layout_width="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_height="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:src="@drawable/selector_like" />

            <ImageView
                android:id="@+id/inflater_body_product_grid_img_avatar_3"
                android:layout_width="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_height="@dimen/inflater_body_product_grid_img_avatar_like"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:src="@drawable/selector_like" />

            <!-- 3 dots -->

            <ImageView
                android:id="@+id/inflater_body_product_grid_img_3_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:src="@drawable/ic_3dots" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_product_spacing"
        android:background="@color/fragment_product_bg" />

</LinearLayout>