<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_spacing" >

        <com.meg7.widget.SvgImageView
            android:id="@+id/inflater_heeader_product_image"
            android:layout_width="@dimen/inflater_header_grid_avatar_size"
            android:layout_height="@dimen/inflater_header_grid_avatar_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            threemins:svg_raw_resource="@raw/shape_avatar" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/inflater_header_grid_margin_left"
            android:layout_toRightOf="@id/inflater_heeader_product_image"
            android:orientation="vertical" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_heeader_product_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/inflater_header_grid_tv_name_margin_bottom"
                android:text="Name"
                android:textColor="@color/common_orange"
                android:textSize="@dimen/textsize_medium"
                threemins:customTypeface="@string/font_bold" />

            <ImageView
                android:id="@+id/inflater_heeader_product_image_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/inflater_heeader_product_tv_name"
                android:src="@drawable/icon_clock" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_heeader_product_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inflater_heeader_product_tv_name"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:layout_toRightOf="@+id/inflater_heeader_product_image_clock"
                android:text="2 days ago"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_regular" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_heeader_product_tv_offered_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inflater_heeader_product_tv_time"
                android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                android:textColor="@color/common_black"
                android:textSize="@dimen/textsize_medium"
                threemins:customTypeface="@string/font_regular" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>