<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/common_spacing" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Header -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.meg7.widget.SvgImageView
                android:id="@+id/inflater_header_product_image"
                android:layout_width="@dimen/inflater_header_grid_avatar_size"
                android:layout_height="@dimen/inflater_header_grid_avatar_size"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher"
                threemins:svg_raw_resource="@raw/shape_avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/inflater_header_grid_margin_left"
                android:orientation="vertical" >

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_header_product_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/inflater_header_grid_tv_name_margin_bottom"
                    android:text="Name"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_regular" />

                <ImageView
                    android:id="@+id/inflater_header_product_image_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/inflater_header_product_tv_name"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_header_product_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inflater_header_product_tv_name"
                    android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                    android:layout_toRightOf="@+id/inflater_header_product_image_clock"
                    android:text="2 days ago"
                    android:textColor="@color/common_grey"
                    android:textSize="@dimen/textsize_small"
                    threemins:customTypeface="@string/font_regular" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="300dp" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_large"
            threemins:customTypeface="@string/font_semibold" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_price"
            android:gravity="center_vertical"
            android:text="50 000 VND"
            android:textColor="@color/common_orange"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like"
            android:gravity="center_vertical"
            android:text="50 000 VND"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center_vertical"
            android:text="50 000 VND"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/inflater_body_product_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_info"
            android:gravity="center_vertical"
            android:text="50 000 VND"
            android:textColor="@color/common_black"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="43dp" />
    </LinearLayout>

</ScrollView>