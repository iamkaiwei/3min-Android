<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- group above the line -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/common_spacing_double" >

                <!-- Header -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:orientation="horizontal" >

                    <com.meg7.widget.SvgImageView
                        android:id="@+id/inflater_header_product_image"
                        android:layout_width="@dimen/inflater_header_grid_avatar_size"
                        android:layout_height="@dimen/inflater_header_grid_avatar_size"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher"
                        threemins:svg_raw_resource="@raw/shape_avatar" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/inflater_header_grid_margin_left"
                        android:orientation="vertical" >

                        <com.lanna.droidlib.view.CustomTextView
                            android:id="@+id/inflater_header_product_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/inflater_header_grid_tv_name_margin_bottom"
                            android:text="Name"
                            android:textColor="@color/common_black"
                            android:textSize="@dimen/textsize_small"
                            threemins:customTypeface="@string/font_regular" />

                        <ImageView
                            android:id="@+id/inflater_header_product_image_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/inflater_header_product_tv_time"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/inflater_header_product_tv_name"
                            android:layout_centerVertical="true"
                            android:src="@drawable/clock" />

                        <com.lanna.droidlib.view.CustomTextView
                            android:id="@+id/inflater_header_product_tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/inflater_header_product_tv_name"
                            android:layout_marginLeft="@dimen/inflater_body_product_grid_common_spacing"
                            android:layout_toRightOf="@+id/inflater_header_product_image_clock"
                            android:text="2 days ago"
                            android:textColor="@color/common_grey"
                            android:textSize="@dimen/textsize_small"
                            threemins:customTypeface="@string/font_regular" />
                    </RelativeLayout>
                </LinearLayout>

					<LinearLayout 
					    android:id="@+id/ln_img"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:orientation="vertical"></LinearLayout>

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_large"
                    threemins:customTypeface="@string/font_semibold" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_price"
                    android:gravity="center_vertical"
                    android:text="50 000 VND"
                    android:textColor="@color/common_orange"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_info"
                    android:gravity="center_vertical"
                    android:text="50 000 VND"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location"
                    android:gravity="center_vertical"
                    android:text="50 000 VND"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_like"
                    android:gravity="center_vertical"
                    android:text="50 000 VND"
                    android:textColor="@color/common_orange"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />
            </LinearLayout>

            <!-- line -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/common_spacing_double"
                android:background="@color/common_grey" />

            <!-- group below the line:  liked, comment, share at bottom -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="@dimen/common_spacing_double"
                android:layout_marginRight="@dimen/common_spacing_double" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:weightSum="7" >

                    <!-- like -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal" 
                        android:id="@+id/btn_like">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/selector_like"
                            android:layout_marginRight="@dimen/common_spacing" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liked"
                            android:textColor="@color/common_grey" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_grey" />

                    <!-- comment -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_spacing"
                            android:src="@drawable/ic_comment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textColor="@color/common_grey" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_grey" />

                    <!-- share -->

                    <LinearLayout
                        android:id="@+id/fm_detail_ln_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_spacing"
                            android:src="@drawable/selector_share_on_facebook" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@color/selector_text_share_on_facebook" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView> <!-- Button chat to buy -->

    <com.lanna.droidlib.view.CustomButton
        android:id="@+id/fragment_detail_btn_chat_to_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_spacing_double"
        android:background="@drawable/bt_chat_to_buy"
        android:textSize="@dimen/textsize_fm_detail_btn_view_offers"
        android:textColor="@android:color/white"
        threemins:customTypeface="@string/font_semibold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_gradient" />

</RelativeLayout>