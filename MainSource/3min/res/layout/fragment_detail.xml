<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- group above the line -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/common_spacing_double" >

                <!-- Header -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:orientation="horizontal" >

                    <com.meg7.widget.SvgImageView
                        android:id="@+id/inflater_header_product_image"
                        android:layout_width="@dimen/inflater_header_grid_avatar_size"
                        android:layout_height="@dimen/inflater_header_grid_avatar_size"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher"
                        threemins:svg_raw_resource="@raw/shape_avatar" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/inflater_header_grid_margin_left"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/inflater_header_product_ln_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <com.lanna.droidlib.view.CustomTextView
                                android:id="@+id/inflater_header_product_tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/common_black"
                                android:textSize="@dimen/textsize_small"
                                threemins:customTypeface="@string/font_regular" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/inflater_header_product_image_clock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/clock" />

                                <com.lanna.droidlib.view.CustomTextView
                                    android:id="@+id/inflater_header_product_tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/common_spacing"
                                    android:textColor="@color/common_grey"
                                    android:textSize="@dimen/textsize_small"
                                    threemins:customTypeface="@string/font_regular" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/inflater_header_product_img_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_edit" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_img"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Medium Text"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_large"
                    threemins:customTypeface="@string/font_semibold" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:layout_marginTop="@dimen/common_spacing_double"
                    android:drawableLeft="@drawable/ic_price"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="300 000 VND"
                    android:textColor="@color/common_orange"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:drawableLeft="@drawable/ic_info"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Hang Thai Lan, bao dep"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:drawableLeft="@drawable/ic_location"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Shop Halo, 20 Nguyen Van Cu"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing_double"
                    android:drawableLeft="@drawable/ic_like"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="12 people like this"
                    android:textColor="@color/common_orange"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/inflater_body_product_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_comment"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/fm_detail_view_all_comment"
                    android:textColor="@color/common_orange"
                    android:textSize="@dimen/textsize_medium"
                    threemins:customTypeface="@string/font_regular" />

                <!-- 3 first comments -->

                <LinearLayout
                    android:id="@+id/inflater_body_product_lnl_top_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fm_detail_comments_margin"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <!-- line -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/common_spacing_double"
                android:background="@color/common_grey" />

            <!-- group below the line:  liked, comment, share at bottom -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="@dimen/common_spacing_double"
                android:layout_marginRight="@dimen/common_spacing_double" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:weightSum="7" >

                    <!-- like -->

                    <LinearLayout
                        android:id="@+id/btn_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/common_spacing"
                                android:src="@drawable/selector_like" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/liked"
                                android:textColor="@color/selector_text_share_on_facebook" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_grey" />

                    <!-- comment -->

                    <LinearLayout
                        android:id="@+id/fm_detail_ln_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/common_spacing"
                                android:src="@drawable/ic_comment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/comment"
                                android:textColor="@color/common_grey" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/common_grey" />

                    <!-- share -->

                    <LinearLayout
                        android:id="@+id/fm_detail_ln_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/common_spacing"
                                android:src="@drawable/selector_share_on_facebook" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/share"
                                android:textColor="@color/selector_text_share_on_facebook" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Button chat to buy -->

    <com.lanna.droidlib.view.CustomButton
        android:id="@+id/fragment_detail_btn_chat_to_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_spacing_double"
        android:background="@drawable/bt_chat_to_buy"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_fm_detail_btn_view_offers"
        threemins:customTypeface="@string/font_semibold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_gradient" />

</RelativeLayout>