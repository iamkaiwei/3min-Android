<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey" >

    <LinearLayout
        android:id="@+id/activity_imageview_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_grey"
        android:orientation="vertical" >

        <!-- 2 imageviews above -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_imageview_spacing_a_half"
            android:paddingLeft="@dimen/activity_imageview_spacing"
            android:paddingRight="@dimen/activity_imageview_spacing"
            android:paddingTop="@dimen/activity_imageview_spacing" >

            <com.threemin.view.SquareImageView
                android:id="@+id/activity_imageview_img_1"
                style="@style/activity_imageview_img_style"
                android:layout_marginRight="@dimen/activity_imageview_spacing_a_half" />

            <com.threemin.view.SquareImageView
                android:id="@+id/activity_imageview_img_2"
                style="@style/activity_imageview_img_style"
                android:layout_marginLeft="@dimen/activity_imageview_spacing_a_half" />
        </LinearLayout>

        <!-- 2 imageviews below -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_imageview_spacing"
            android:paddingLeft="@dimen/activity_imageview_spacing"
            android:paddingRight="@dimen/activity_imageview_spacing"
            android:paddingTop="@dimen/activity_imageview_spacing_a_half" >

            <com.threemin.view.SquareImageView
                android:id="@+id/activity_imageview_img_3"
                style="@style/activity_imageview_img_style"
                android:layout_marginRight="@dimen/activity_imageview_spacing_a_half" />

            <com.threemin.view.SquareImageView
                android:id="@+id/activity_imageview_img_4"
                style="@style/activity_imageview_img_style"
                android:layout_marginLeft="@dimen/activity_imageview_spacing_a_half" />
        </LinearLayout>

        <!-- infomation -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_imageview_spacing"
            android:layout_marginLeft="@dimen/activity_imageview_spacing"
            android:layout_marginRight="@dimen/activity_imageview_spacing"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <!-- group of icons -->


            <!-- group of textviews and editexts -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_imageview_spacing"
                android:orientation="vertical" >

                <!-- category -->

                <RelativeLayout
                    android:id="@+id/view_cate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing"
                    android:layout_marginTop="@dimen/common_spacing"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/ic_cate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/ic_category" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/arrow_right" />

                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/activity_imageview_category"
                        style="@style/activity_imageview_edittext_style"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:layout_toLeftOf="@+id/imageView1"
                        threemins:customTypeface="@string/font_regular" />

                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/activity_imageview_tv_category"
                        style="@style/activity_imageview_textview_style"
                        android:layout_alignTop="@+id/imageView1"
                        android:layout_toRightOf="@+id/ic_cate"
                        android:text="@string/activity_imageview_category"
                        threemins:customTypeface="@string/font_semibold" />
                </RelativeLayout>

                <!-- item -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing"
                    android:layout_marginTop="@dimen/common_spacing"
                    android:layout_weight="1" 
                    android:id="@+id/item_content">

                    <ImageView
                        android:id="@+id/ic_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/ic_item" />

                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/activity_imageview_tv_item"
                        style="@style/activity_imageview_edittext_style"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:layout_toLeftOf="@+id/imageView2"
                        android:hint="@string/activity_imageview_item_hint"
                        threemins:customTypeface="@string/font_regular" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/arrow_right" />

                    <com.lanna.droidlib.view.CustomTextView
                        style="@style/activity_imageview_textview_style"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ic_item"
                        android:text="@string/activity_imageview_item"
                        threemins:customTypeface="@string/font_semibold" />
                </RelativeLayout>

                <include
                    android:id="@+id/view_product_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/view_content_product"
                    android:visibility="gone" />
                <!-- price -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_spacing"
                    android:layout_marginTop="@dimen/common_spacing"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/ic_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/ic_price" />

                    <com.lanna.droidlib.view.CustomEditText
                        android:id="@+id/activity_imageview_et_price"
                        style="@style/activity_imageview_edittext_style"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:layout_toLeftOf="@+id/activity_imageview_tv_currency"
                        android:hint="@string/activity_imageview_price_hint"
                        android:inputType="number"
                        threemins:customTypeface="@string/font_regular" />
                    
                    <com.lanna.droidlib.view.CustomTextView
                        android:id="@+id/activity_imageview_tv_currency"
                        style="@style/activity_imageview_edittext_style"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:text="@string/currency"
                        threemins:customTypeface="@string/font_regular" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_spacing"
                        android:src="@drawable/arrow_right" />

                    <com.lanna.droidlib.view.CustomTextView
                        style="@style/activity_imageview_textview_style"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/ic_price"
                        android:text="@string/activity_imageview_price"
                        threemins:customTypeface="@string/font_semibold" />
                </RelativeLayout>

                <!-- Location -->

            </LinearLayout>
        </LinearLayout>

        <!-- share on facebook -->

        <LinearLayout
            android:id="@+id/activity_imageview_relative_layout_share_on_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_imageview_spacing"
            android:layout_marginRight="@dimen/activity_imageview_spacing"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="@dimen/activity_imageview_spacing_a_half" >

            <ImageView
                android:id="@+id/activity_imageview_img_share_on_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/activity_imageview_spacing"
                android:src="@drawable/ic_share_facebook" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_imageview_spacing" >

                <com.lanna.droidlib.view.CustomTextView
                    android:id="@+id/activity_imageview_tv_share_on_facebook"
                    style="@style/activity_imageview_textview_style"
                    android:layout_alignParentLeft="true"
                    android:text="@string/activity_imageview_share_on_facebook" />

                <Switch
                    android:id="@+id/activity_imageview_switch_share_on_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <!-- delete listing -->
        <ImageButton 
            android:id="@+id/activity_imageview_img_delete_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_imageview_spacing"
            android:scaleType="fitXY"
            android:background="@drawable/selector_act_imageview_img_delete_listing"/>

        <com.facebook.widget.LoginButton
            android:id="@+id/activity_imageview_btn_login_facebook"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>