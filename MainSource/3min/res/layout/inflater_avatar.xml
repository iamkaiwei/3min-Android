<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.meg7.widget.SvgImageView
        android:id="@+id/nav_avatar"
        android:layout_width="@dimen/navigation_avatar_size"
        android:layout_height="@dimen/navigation_avatar_size"
        android:layout_margin="@dimen/navigation_avatar_margin"
        android:scaleType="centerCrop"
        threemins:svg_raw_resource="@raw/shape_avatar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/nav_avatar"
        android:orientation="vertical" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/navigation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="CustomTextView"
            android:textColor="@color/text_color_grouplayout"
            android:textSize="@dimen/textsize_avatar"
            threemins:customTypeface="@string/font_semibold" />

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/navigation_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="CustomTextView"
            android:textColor="@color/text_color_grouplayout_disable"
            android:textSize="@dimen/textsize_medium"
            threemins:customTypeface="@string/font_regular" />
    </LinearLayout>

</RelativeLayout>