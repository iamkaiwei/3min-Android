<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/inf_feedback_margin"
    android:orientation="vertical" >

    <!-- user infomation -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.meg7.widget.SvgImageView
            android:id="@+id/inf_feedback_avatar"
            android:layout_width="@dimen/inf_feedback_avatar_size"
            android:layout_height="@dimen/inf_feedback_avatar_size"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            threemins:svg_raw_resource="@raw/shape_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_spacing_a_half"
            android:orientation="vertical" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inf_feedback_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="user name"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_semibold" />

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inf_feedback_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_spacing_double"
                android:singleLine="true"
                android:text="Time"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_very_small"
                threemins:customTypeface="@string/font_regular" />
        </LinearLayout>
    </LinearLayout>

    <!-- content -->

    <com.lanna.droidlib.view.CustomTextView
        android:id="@+id/inf_feedback_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="@dimen/inf_feedback_margin"
        android:text="Feedback content"
        android:textSize="@dimen/textsize_small"
        threemins:customTypeface="@string/font_semibold" />

</LinearLayout>