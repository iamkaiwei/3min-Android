<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey" >

    <com.facebook.widget.LoginButton
        android:id="@+id/activity_home_btn_login_facebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <FrameLayout 
        android:id="@+id/activity_home_fm_dimmed_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_home_dimmed_background"
        android:visibility="gone"></FrameLayout>

</FrameLayout> <!-- </android.support.v4.widget.DrawerLayout> -->
