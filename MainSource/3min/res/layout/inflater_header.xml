<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:weightSum="8" >

        <ImageView
            android:id="@+id/inflater_heeader_product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/inflater_heeader_product_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inflater_heeader_product_image"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:drawableRight="@drawable/icon_clock"
            android:text="2 days ago"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/inflater_heeader_product_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/inflater_heeader_product_tv_time"
            android:layout_alignBottom="@+id/inflater_heeader_product_tv_time"
            android:layout_toLeftOf="@+id/inflater_heeader_product_tv_time"
            android:layout_toRightOf="@+id/inflater_heeader_product_image"
            android:text="Orange"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</LinearLayout>