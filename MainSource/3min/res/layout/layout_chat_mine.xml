<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
	    android:paddingRight="@dimen/common_spacing"
	    android:paddingTop="@dimen/common_spacing_double" >

        <com.lanna.droidlib.view.CustomTextView
            android:id="@+id/layout_chat_mine_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_spacing"
            android:textSize="@dimen/textsize_small"
            android:text="1 day ago"
            android:textColor="@color/common_grey"
            threemins:customTypeface="@string/font_regular" />

        <com.meg7.widget.SvgImageView
            android:id="@+id/layout_chat_mine_avatar"
            android:layout_width="@dimen/inflater_header_grid_avatar_size"
            android:layout_height="@dimen/inflater_header_grid_avatar_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_spacing"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            threemins:svg_raw_resource="@raw/shape_avatar" />
    </LinearLayout>

    <com.lanna.droidlib.view.CustomTextView
        android:id="@+id/layout_chat_mine_tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/inflater_header_grid_avatar_size"
        android:background="@drawable/bg_chat_mine"
        android:text="123465"
        android:textSize="@dimen/textsize_medium"
        threemins:customTypeface="@string/font_regular" />

</RelativeLayout>