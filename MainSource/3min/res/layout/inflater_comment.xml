<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:threemins="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/common_spacing_a_half"
    android:paddingBottom="@dimen/common_spacing_a_half"
    android:paddingLeft="@dimen/common_spacing_triple"
    android:paddingRight="@dimen/common_spacing_triple" >

    <com.meg7.widget.SvgImageView
        android:id="@+id/inflater_comment_avatar"
        android:layout_width="@dimen/comment_avatar_size"
        android:layout_height="@dimen/comment_avatar_size"
        android:layout_marginRight="@dimen/common_spacing"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        threemins:svg_raw_resource="@raw/shape_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/common_spacing_double" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_comment_tv_name_and_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chanhhung"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_semibold" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/clock"/>
            
            <com.lanna.droidlib.view.CustomTextView
                android:id="@+id/inflater_comment_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_spacing"
                android:text="2 weeks"
                android:textColor="@color/common_grey"
                android:textSize="@dimen/textsize_small"
                threemins:customTypeface="@string/font_semibold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>