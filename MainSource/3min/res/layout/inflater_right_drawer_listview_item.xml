<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/inflater_right_drawer_listview_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/inflater_right_drawer_listview_item_margin_bot"
        android:layout_marginLeft="@dimen/inflater_right_drawer_listview_item_margin_left"
        android:layout_marginTop="@dimen/inflater_right_drawer_listview_item_margin_top"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/common_black"
        android:textSize="@dimen/inflater_right_drawer_listview_item_text_size" />

    <ImageView
        android:id="@+id/inflater_right_drawer_listview_item_chk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_ticked"
        android:layout_marginBottom="@dimen/inflater_right_drawer_listview_item_margin_bot"
        android:layout_marginRight="@dimen/inflater_right_drawer_listview_item_margin_right"
        android:layout_marginTop="@dimen/inflater_right_drawer_listview_item_margin_top"
        android:visibility="invisible" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/inflater_right_drawer_listview_item_line" />

</RelativeLayout>